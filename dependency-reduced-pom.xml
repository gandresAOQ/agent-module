<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>co.com.bancodebogota.agent</groupId>
  <artifactId>agent-module</artifactId>
  <name>Agent Module</name>
  <version>1.0.0</version>
  <description>Module for bytecode instrumentation logic</description>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.4.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <createDependencyReducedPom>true</createDependencyReducedPom>
              <transformers>
                <transformer>
                  <mainClass>co.com.bancodebogota.agent.aop.agent.InterceptorAgent</mainClass>
                  <manifestEntries>
                    <Premain-Class>co.com.bancodebogota.agent.aop.agent.InterceptorAgent</Premain-Class>
                    <Agent-Class>co.com.bancodebogota.agent.aop.agent.InterceptorAgent</Agent-Class>
                    <Can-Retransform-Classes>true</Can-Retransform-Classes>
                    <Can-Redefine-Classes>true</Can-Redefine-Classes>
                  </manifestEntries>
                </transformer>
              </transformers>
              <relocations>
                <relocation>
                  <pattern>io.smallrye.mutiny</pattern>
                  <shadedPattern>co.com.bancodebogota.agent.shaded.mutiny</shadedPattern>
                </relocation>
              </relocations>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>${quarkus.platform.group-id}</groupId>
        <artifactId>${quarkus.platform.artifact-id}</artifactId>
        <version>${quarkus.platform.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <properties>
    <quarkus.platform.version>2.2.2.Final</quarkus.platform.version>
    <quarkus.package.jar.type>uber-jar</quarkus.package.jar.type>
    <maven.compiler.source>11</maven.compiler.source>
    <quarkus.platform.artifact-id>quarkus-bom</quarkus.platform.artifact-id>
    <maven.compiler.target>11</maven.compiler.target>
    <maven.compiler.parameters>true</maven.compiler.parameters>
    <quarkus.platform.group-id>io.quarkus</quarkus.platform.group-id>
  </properties>
</project>
